<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/main_list_item_height"
    app:cardBackgroundColor="@color/card_bg"
    app:cardCornerRadius="@dimen/main_list_item_cardview"
    app:cardElevation="@dimen/main_list_item_cardview"
    app:contentPadding="@dimen/main_list_item_cardview">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/main_list_item_padding">

        <TextView
            android:id="@+id/item_main_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_main_list_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_list_item_marginTop2"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/item_main_list_title" />

        <TextView
            android:id="@+id/item_main_list_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_list_item_marginTop2"
            app:layout_constraintTop_toBottomOf="@id/item_main_list_author" />

        <TextView
            android:id="@+id/item_main_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_list_item_marginTop2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_main_list_author" />

        <ImageView
            android:id="@+id/item_main_list_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/collect_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


